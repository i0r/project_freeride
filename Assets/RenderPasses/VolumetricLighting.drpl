lib VolumetricLighting {
    properties {
        
    }
    
    resources {
        RWTexture3D VBuffer {
            swizzle = float4;
        }
    }
    
    shared { 
        #include <GeometryUtils.hlsli>
    }
    
    shader ScatteringCS {
        VBuffer[$SV_DispatchThreadID.xyz] = float4( 0, 0, 0, 0 );
    }
    
    pass Scattering {
        compute       = ScatteringCS;
        dispatch      = { 8, 8, 16 };
    }
}
